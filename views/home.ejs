<% include ./partial/iheader.ejs %>
<link rel="stylesheet" href="/css/dashboard.css">
<br>
<div class="section">
	<div class="container">
		<div class="row">
			<div class="col s12 m12 l2">
			</div>
			<div class="col s12 m12 l10">
				<h5 style="color: #aa00ff"><b>Personal Boards</b><i class="material-icons left">person</i></h5>
				<div class="row">
					<!-- displaying all the personal notes -->
					<% notes.forEach((i)=>{ %>
						<% if (!i.teamWork){ %>
							<a href="/users/board/<%= i.uid %>">	
								<div class="col s12 m12 l3 purple lighten-4 z-depth-1 waves-effect waves-light center-align box-board" >
									<%= (i.name) %>
								</div>
							</a>
						<% } %>
					<% }); %>
					<!-- create new personal notes (call to modal) -->
					<div data-target="modal1" class="col s12 m12 l3 purple lighten-4 z-depth-1 waves-effect waves-light modal-trigger center-align box-board">
						Create New Board
					</div>
				  <!-- Modal Structure -->
				  <!-- modal for new personal board -->
				  <div id="modal1" class="modal">
					  <form action="/users/new/board" method="post">
						<div class="modal-content">
							<h4 class="center-align" style="color: #ab47bc">New Board Details<i class="modal-close material-icons right">close</i></h4>
							<div class="container"><div class="divider"></div></div>
							  <div class="row">
								<div class="input-field col s6">
								  <input id="name" name="name" type="text" class="validate" required />
								  <label for="name">Name</label>
								</div>
							  </div>
							  <div class="row">
								<div class="input-field col s12">
								  <textarea id="textarea1" name="desc" required class="materialize-textarea"></textarea>
								  <label for="textarea1">Description</label>
								</div>
							  </div>
							<div class="divider"></div>
							</div>
						<div class="modal-footer">
							<button class="btn waves-effect waves-light purple lighten-1" style="margin: 0 5px" type="submit">
								Create
								<i class="material-icons left">
									create
								</i>
						  	</button>
						</div>
					  </form>
				  </div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- team member part-->
<div class="section">
	<div class="container">
		<div class="row">
			<div class="col s12 m12 l2">
			</div>
			<div class="col s12 m12 l10">
				<h5 style="color: #aa00ff"><b>Team Board</b><i class="material-icons left">people</i></h5>
				<div class="row">
					<!-- display list of all team notes -->
					<% notes.forEach((i)=>{ %>
						<% if (i.teamWork){ %>
							<a href="/teams/board/<%= i.uid %>">	
								<div class="col s12 m12 l3 purple lighten-4 z-depth-1 waves-effect waves-light center-align box-board" >
									<%= (i.name) %>
								</div>
							</a>
						<% } %>
					<% }); %>
					<!-- creating new team notes (call to modal) -->
					<div data-target="modal2" class="col s12 m12 l3 purple lighten-4 z-depth-1 waves-effect waves-light modal-trigger center-align box-board">
						New Team Board
					</div>
					<!-- Modal Structure -->
					<!-- new team note moal -->
				  <div id="modal2" class="modal">
					  <form action="/teams/create/board" method="post">
						<div class="modal-content">
							<h4 style="text-align: center;color: #ab47bc">New Team Board Details<i class="modal-close material-icons right">close</i></h4>
							<div class="container"><div class="divider"></div></div>
							  	<div class="row">
									<div class="input-field col s6">
									<input id="name" name="name" type="text" class="validate" required />
									<label for="name">Team Name</label>
									</div>
							  	</div>
								<div class="row">
									<div class="input-field col s12">
										<textarea id="textarea1" name="desc" required class="materialize-textarea"></textarea>
										<label for="textarea1">Description</label>
									</div>
							  	</div>
							<div class="divider"></div>
						</div>
						<div class="modal-footer">
						  <button class="btn waves-effect waves-light purple lighten-1" style="margin: 0 5px" type="submit" >Create
							<i class="material-icons left">create</i>
						  </button>
						</div>
					  </form>
				  </div>
				</div>
			</div>
		</div>
	</div>
</div>
<% include ./partial/ifooter.ejs %>