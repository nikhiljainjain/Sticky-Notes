<% include ./header.ejs %>
<body style="font-family: 'Baloo 2', cursive;">
	<div class="navbar-fixed">
		<nav class="purple darken-3">
			<div class="nav-wrapper">
				<a href="#!" class="brand-logo center">Mr. Notes<img src="/img/fav2.png" class="left logo-fav"></a>
                <ul id="nav-mobile" class="left hide-on-med-and-down">
					<li><a href="/" class="waves-effect waves-light btn purple darken-2"><i class="material-icons">home</i></a></li>
				</ul>
            </div>
		  </nav>
    </div>
    <!-- display toast message -->
<% if (msg){ %>
    <script>
        document.addEventListener('DOMContentLoaded', ()=>{
            M.toast({
                html: `<i class="material-icons left <%= color %>-text"><%= icon %></i><%= msg %>`, 
                displayLength: 5000
            })
        });
    </script>
<% } %>