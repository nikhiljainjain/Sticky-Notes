<% include ./partial/header.ejs %>
<script src="/js/cookie.js"></script>
<body style="font-family: 'Baloo 2', cursive;">
	<!-- navbar started -->
	<div class="navbar-fixed">
		<nav class="purple darken-3">
			<!-- side menu bar icon -->
			<a href="#" data-target="side-nav" class="sidenav-trigger show-on-large"><i class="material-icons">menu</i></a>
			<div class="nav-wrapper">
				<!-- logo -->
				<a href="#!" class="brand-logo center">Mr. Notes<img src="/img/fav2.png" class="left logo-fav"></a>
				<ul class="right hide-on-med-and-down">
					<!-- display notes name -->
					<li><a class="waves-effect waves-purple btn purple darken-2"><%= (name) ? name : user.name %><i style="padding: -5px;" class="material-icons left"><%=  (name) ? "dashboard" : "person" %></i></a></li>
				</ul>
			</div>
		</nav>
	</div>
	<ul class="sidenav" id="side-nav">
		<li>
			<!-- user profile view -->
			<div class="user-view">
				<div class="background">
					<img src="/img/ocean-3605547.jpg">
				</div>
				<a href="#"><img class="circle" src="/img/human-3056693.jpg"></a>
				<!-- display user details -->
				<a href="#"><span class="white-text name"><%= user.name %></span></a>
				<a href="#"><span class="white-text email"><%= user.email %></span></a>
		  	</div>
		</li>
		<!-- starting navigation link -->
		<li><a href="/users" >Home<i class="material-icons left">home</i></a></li>
		<li>
			<div class="divider"></div>
		</li>
		<li><a target="_blank" href="https://bit.ly/mrnotesfeedback">Feedback<i class="material-icons left">description</i></a></li>
		<li><a href="#">Setting<i class="material-icons left">settings</i></a></li>
		<li><a href="#addMember" class="modal-trigger">Add Member<i class="material-icons left">group_add</i></a></li>
		<li><a href="/logout">Logout<i class="material-icons left">exit_to_app</i></a></li>
		<!-- ending navigation link -->
		<li>
			<div class="divider"></div>
		</li>
		<li>
			<a href="#">
				Members
			<i class="material-icons left">
				group
			</i></a>
		</li>
		<li>
			<div class="divider"></div>
		</li>
		<% members.forEach(i=>{ %>
		<li><a href="#"><%= i.name %><i class="material-icons left">person</i></a></li>
		<% }) %>
	</ul>
<main>
<!-- Modal Structure -->
<!-- starting of modal -->
<!-- invite new member -->
<div id="addMember" class="modal">
  <form action="" id="newMemberForm" method="post">
	<div class="modal-content">
		<h4 style="text-align: center;color: #ab47bc">Invite Team Member<i class="modal-close material-icons right">close</i></h4>
		<div class="container"><div class="divider"></div></div>
		  <div class="row">
			  <!-- collect email -->
			<div class="input-field col s12">
			  <input id="email" name="email" type="email" class="validate" required />
			  <label for="email">Email</label>
			</div>
		  </div>
		<div class="divider"></div>
		</div>
		<!-- submission button -->
	<div class="modal-footer">
	  <button class="btn waves-effect waves-light purple lighten-1" style="margin: 5px 5px" id="addMemberBtn" type="submit" >Add Member
		<i class="material-icons right">person_add</i>
	  </button>
	</div>
  </form>
</div>
<!-- ending of modal -->
<% include ./main-board.ejs %>